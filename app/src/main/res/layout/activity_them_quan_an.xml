<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemQuanAnActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Quán ăn"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:textSize="24dp"
        android:id="@+id/editTextStoreName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên quán ăn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <EditText
        android:textSize="24dp"
        android:id="@+id/editTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập địa chỉ quán ăn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextStoreName" />
    <EditText
        android:textSize="24dp"
        android:id="@+id/editTextOpenTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập giờ mở cửa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddress" />
    <EditText
        android:textSize="24dp"
        android:id="@+id/editTextCloseTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập giờ đóng cửa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextOpenTime" />
    <EditText
        android:textSize="24dp"
        android:id="@+id/editTextCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập loại quán ăn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCloseTime" />

    <ImageButton
        android:layout_margin="20dp"
        android:id="@+id/imageButtonFolder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@+id/imageViewCoverPhoto"
        app:layout_constraintTop_toBottomOf="@+id/editTextCategories"
        app:srcCompat="@drawable/open_folder" />

    <Button
        android:layout_margin="20dp"
        android:id="@+id/buttonThem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCoverPhoto" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/buttonHuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hủy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonThem"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCoverPhoto" />

    <ImageView
        android:id="@+id/imageViewCoverPhoto"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCategories"
        app:srcCompat="@drawable/no_image" />
</androidx.constraintlayout.widget.ConstraintLayout>