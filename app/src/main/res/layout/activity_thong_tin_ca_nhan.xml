<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D6D6"
    tools:context=".ThongTinCaNhanActivity">

    <RelativeLayout
        android:id="@+id/actionBarThongTinCaNhan"
        android:layout_width="match_parent"
        android:paddingHorizontal="20dp"
        android:layout_height="70dp"
        android:background="#70ad47"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imgBackThongTinCaNhan"
            android:src="@drawable/ic_back_white"
            android:background="#70ad47"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:id="@+id/textViewThongTinCaNhan"
            android:text="Thông tin cá nhân"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/containerImageThongTinCaNhan"
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toBottomOf="@+id/actionBarThongTinCaNhan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/imgThongTinCaNhan"
            android:src="@drawable/capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/containerFullName"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/containerImageThongTinCaNhan">
        <TextView
            android:id="@+id/textViewFullNameTitle"
            android:layout_weight="3"
            android:text="Full Name"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txtViewFullName"
            android:layout_weight="3"
            android:textColor="@color/black"
            android:text="Nhật Hào"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/imgEditFullName"
            android:layout_weight="4"
            android:src="@drawable/ic_edit"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/containerFullName">
        <TextView
            android:id="@+id/textViewSexTitle"
            android:layout_weight="3"
            android:text="Sex"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textViewSex"
            android:layout_weight="3"
            android:textColor="@color/black"
            android:text="Nam"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/imgEditSex"
            android:layout_weight="4"
            android:src="@drawable/ic_edit"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/containerBirthdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/containerSex">
        <TextView
            android:id="@+id/textViewBirthdateTitle"
            android:layout_weight="3"
            android:text="Birthdate"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textViewBirthdate"
            android:layout_weight="3"
            android:textColor="@color/black"
            android:text="18/06/1999"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/imgEditBirthdate"
            android:layout_weight="4"
            android:src="@drawable/ic_edit"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>