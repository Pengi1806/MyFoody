<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewFoodGridView"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="170dp"
        android:layout_height="170dp"/>

    <TextView
        android:id="@+id/textViewFoodNameGridView"
        android:text="Food name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/imageViewFoodGridView"
        android:layout_alignRight="@+id/imageViewFoodGridView"
        android:layout_below="@+id/imageViewFoodGridView"/>

    <TextView
        android:id="@+id/textViewPriceGridView"
        android:text="Price"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/imageViewFoodGridView"
        android:layout_alignRight="@+id/imageViewFoodGridView"
        android:layout_below="@+id/textViewFoodNameGridView"/>

</RelativeLayout>