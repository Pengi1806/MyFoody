<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D6D6D6"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/actionBarHome"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#70ad47"
        android:paddingVertical="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:paddingHorizontal="10dp"
            android:weightSum="9"
            android:background="@color/white">

            <EditText
                android:layout_weight="8"
                android:hint="Bún bò, Võ Văn Ngân"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:focusable="false"
                android:background="@android:color/transparent"/>

            <ImageView
                android:src="@drawable/ic_search"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="660dp"
        app:layout_constraintTop_toBottomOf="@id/actionBarHome"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:weightSum="10">

        <Spinner
            android:id="@+id/dropdownCategoriesHome"
            android:layout_width="match_parent"
            style="@android:style/Widget.Spinner.DropDown"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <GridView
            android:id="@+id/gridViewStoreHome"
            android:numColumns="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>