<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageViewOrderDetailListView"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textViewOrderDetailName"
                android:text="Name"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textViewOrderDetailPrice"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewOrderDetailPrice"
                android:text="Price"
                android:textSize="18dp"
                app:layout_constraintLeft_toRightOf="@id/textViewOrderDetailDonGia"
                app:layout_constraintTop_toTopOf="@id/textViewOrderDetailDonGia"
                app:layout_constraintBottom_toBottomOf="@id/textViewOrderDetailDonGia"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewOrderDetailQuantity"
                android:text="Quantity"
                android:textSize="18dp"
                app:layout_constraintLeft_toRightOf="@id/textViewOrderDetailSoluong"
                app:layout_constraintTop_toTopOf="@id/textViewOrderDetailSoluong"
                app:layout_constraintBottom_toBottomOf="@id/textViewOrderDetailSoluong"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewOrderDetailDonGia"
                android:text="Đơn giá: "
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@id/textViewOrderDetailSoluong"
                app:layout_constraintTop_toBottomOf="@id/textViewOrderDetailName"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewOrderDetailSoluong"
                android:text="Số lượng: "
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewOrderDetailDonGia"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</LinearLayout>