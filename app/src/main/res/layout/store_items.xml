<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageViewStoreGridView"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewStoreNameGridView"
        android:text="Store name"
        android:maxLines="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/imageViewStoreGridView"
        android:layout_alignRight="@+id/imageViewStoreGridView"
        android:layout_below="@+id/imageViewStoreGridView"/>
</RelativeLayout>